<%= render "/home/nav" %>
<div class="container mt-4">
    <% @users.each do | user | %>
        <% if user != current_user || user != current_user.following%>
        <div>
        <%= image_tag(user.profile_image, size:"45x45", class:"rounded-circle") if user.profile_image.attached? %>  <%= user.email %>
                <% if current_user.following?(user) %>
                        <%= button_to "Unfollow", unfollow_path(@user) , class:"btn btn-success btn-sm"%>
                <% elsif current_user.sent_follow_request_to?(user) %>
                    <%= button_to "Cancel follow request", cancel_path(user) , class:"btn btn-danger btn-sm"%>
                <% else %>
            </div>
        
                    <%= button_to "Follow", follow_path(user) , class:"btn btn-primary btn-sm" %>
                <% end %>
        <% end %>
    <% end %>

</div>